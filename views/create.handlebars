<h1>Save a video</h1>
<div class="contents-container">
    <form action="/videos" method="post">
        {{#if error}}
            <span class="error-message">{{error}}</span>
        {{/if}}
        <div class="form-item">
            <label for="video-title">
                Video title:
            </label>
            <input type="text" name="title" id="video-title" value="{{video.title}}">
        </div>
        <div class="form-item">
            <label for="video-description">
                Video description:
            </label>
            <br>
            <input type="text" name="description" id="video-description" value="{{video.description}}">
        </div>
        <div class="form-item">
            <label for="video-url">
                Video URL:
            </label>
            <br>
            <input type="text" name="videoUrl" id="video-url" value="{{video.videoUrl}}">
        </div>
        <input type="submit" id="submit-video" value="Submit">
    </form>
